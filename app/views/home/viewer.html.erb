<section id="toolbar_section">
  <div id="toolbar_top">
    <div id="menuContainer">
      <i class="material-icons" id="menu">&#xE5D2;</i>
    </div>
    <h1 id="abire_header">ABIRE</h1>
    <div id="toolbar_search_container">
      <span id="toolbar_search"><i class="material-icons md-26">&#xE8B6;</i></span>
      <input id="search_input" class="hidden search" type="text" name="user[search_query]" placeholder="Search"/>
    </div>
  </div>
  <div id="toolbar_bottom">
    <div class="bottom_toolbar">
    </div>
    <div class="bottom_toolbar">
      <%= image_tag("icon.png", id: "icon", alt: "icon")%>
    </div>
    <ul class="bottom_toolbar" id="bt_right">
      <li class="bottom_toolbar_links">My Account</li>
      <li class="bottom_toolbar_links">Help</li>
      <li class="bottom_toolbar_links">Log Out</li>
    </ul>
  </div>
</section>
<section id="viewer_section">
  <ul id="viewer_list">
  
    <li class="ad">
      <div class="ad_main">
        <img src="http://cdn.devicemag.com/wp-content/uploads/2010/11/target-toy-book-.jpg" alt="ad image" class="ad_img"/>
        <div class="ad_top_right">
          <h1 class="company_title">Target</h1>
          <p class="ad_description">Buy a Toy and Get one Free!</p>
          <p class="ad_link"><a href="https://www.target.com" class="ad_link_a">Target Website</a></p>
        </div>
      </div>
    </li>
    <li class="ad">
      <div class="ad_main">
        <img src="https://www.blackfriday.fm/img/adscan/2013/5879_1383155357.JPEG" alt="ad image" class="ad_img"/>
        <div class="ad_top_right">
          <h1 class="company_title">Walmart</h1>
          <p class="ad_description">Buy a Toy and Get one Free!</p>
          <p class="ad_link"><a href="https://www.walmart.com" class="ad_link_a">Walmart Website</a></p>
        </div>
      </div>
    </li>
    <li class="ad_long">
      <div class="ad_main">
        <img src="http://cdn.devicemag.com/wp-content/uploads/2010/11/target-toy-book-.jpg" alt="ad image" class="ad_img"/>
        <div class="ad_top_right">
          <h1 class="company_title">Target</h1>
          <p class="ad_description ad_long_text">Buy a Toy and Get one Free!</p>
          <p class="ad_link ad_long_text"><a href="https://www.target.com" class="ad_link_a">Target Website</a></p>
        </div>
      </div>
    </li>
  </ul>
</section>
<section id="nav_drawer_section" class="hidden">
  <div id="nav_drawer">

  </div>
</section>
